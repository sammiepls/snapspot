<div class="card-deck">

  <% if @snapspots.empty? %>
    <div class='py-5 text-center col-12'>
      <i class='fa fa-frown-o fa-5x mb-3'></i>
      <p>Sorry, there doesn't seem to be anything matching your search </p>
    </div>
  <% else %>
  <% @snapspots.each do |snapspot| %>
    <%= link_to snapspot_path(snapspot) do %>
    <div class='col-4 my-4'>
      <div class="card text-center">
        <% if snapspot.images.first %>
          <%= image_tag snapspot.images.first.polaroid, class: "card-img-top" %>
        <% else %>
          <%= image_tag 'https://s3-ap-southeast-1.amazonaws.com/sammiepls-airbnb-clone/placeholder.png', class: "card-img-top"  %>
        <% end %>
        <div class="card-body">
          <h4 class="card-title"><%= snapspot.name %></h4>



          <p class="card-text"> <%= raw snapspot.tag_list.map { |tag| link_to "##{tag}", tag_path(tag) }.join(" ")  %></p>
        </div>
        <div class="card-footer">
          <small class="text-muted">Submitted by <%= link_to snapspot.user.username, user_path(snapspot.user) %></small>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
  <% end%>

</div>
