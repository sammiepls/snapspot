<section class='snapspot-create-hero d-flex align-items-center justify-content-center'>
    <h1 class='marker white'>Edit your SnapSpot</h1>
  </section>
  <% if @errors %>
    <div class='error-wrapper'>
      <%= @errors %>
    </div>
  <% end %>
  <main>
  <div class="container-fluid">
    <div class="row form-bg">
      <div class="col-6">
        <div class='snapspot-form-wrapper'>
          <%= form_for @snapspot do |form| %>
            <%= render partial: '/snapspots/form', object: form %>
            <%= form.submit class: 'btn btn-primary' %>
        </div>
      </div>
      <div class='col-6 pr-0'>
        <div id="map-new" style='width: 100%; height: 100%;'></div>
      </div>
      <% end %>

    </div>
  </div>
</main>

<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAPS_GEOCODE_KEY'] %>&callback=initMap">
</script>
